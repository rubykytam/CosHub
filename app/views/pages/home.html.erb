<div class="container" style="z-index: 5; position: relative;">
  <h1 class="recent-cosplay-title mb-3">Most recent cosplays:</h1>
  <div class="d-flex justify-content-center">
    <div class="card-container">
      <% if @cosplays.any? %>
        <% @cosplays.each do |cosplay| %>
          <div class="card d-flex justify-content-center">
            <%= link_to cosplay_path(cosplay), class:"card-link" do %>
              <div class="homepage-card" style="background-image: url( <%= cosplay.images.attached? ? cl_image_path(cosplay.images.first.key) : image_url("https://upload.wikimedia.org/wikipedia/commons/thumb/3/3f/Placeholder_view_vector.svg/681px-Placeholder_view_vector.svg.png") %>) %> )">
                <div class="w-100"></div>
                <div class="d-flex flex-column w-100 info-text">
                  <h3 style="text-align: center"> <%= cosplay.name %> </h3>
                  <div class="d-flex justify-content-between pl-4 pr-4">
                    <p style="max-width: 45%"> <%= cosplay.source_material %> </p>
                    <p> Â¥<%= cosplay.price %>/day </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <em>Nice website, shame nobody has uploaded to it</em>
      <% end %>
      <div class="last-card"></div>
      <div class="last-card"></div>
      <div class="last-card"></div>
    <% else %>
      <em>Sorry, no cosplays found!</em>
    <% end %>
  </div>
  <h1 class="recent-cosplay-title mb-3 mt-5">Some Cosplays for You:</h1>
  <div class="d-flex justify-content-center">
    <div class="card-container">
      <% if @cosplays.any? %>
        <% @cosplays.sample(8).each do |cosplay| %>
          <%= link_to cosplay_path(cosplay), class:"card-link" do %>
            <div class="homepage-card" style="background-image: url( <%= cosplay.images.attached? ? cl_image_path(cosplay.images.first.key) : image_url("https://upload.wikimedia.org/wikipedia/commons/thumb/3/3f/Placeholder_view_vector.svg/681px-Placeholder_view_vector.svg.png") %> )">
              <h3> <%= cosplay.name %> </h3>
            </div>
          <% end %>
        <% end %>
        <div class="last-card"></div>
        <div class="last-card"></div>
        <div class="last-card"></div>
      <% else %>
        <em>Sorry, no cosplays found!</em>
      <% end %>
    </div>
  </div>
</div>
</div>
